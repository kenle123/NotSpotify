<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LibraryFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="{Username} playlists"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textview_playlists"
        android:layout_weight=".05"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

    <ListView
    android:id="@+id/list_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/addPlaylist_library"
            android:id="@+id/button_add_playlist"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/deletePlaylist_library"
            android:id="@+id/button_delete_playlist"/>
    </LinearLayout>

</LinearLayout>